{
	"name": "needlebot",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:generate": "drizzle-kit generate --config=src/lib/server/db/drizzle.config.ts",
		"db:push": "drizzle-kit push --config=src/lib/server/db/drizzle.config.ts",
		"db:migrate": "tsx src/lib/server/db/migrate.ts",
		"db:studio": "drizzle-kit studio --config=src/lib/server/db/drizzle.config.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/better-sqlite3": "^7.6.13",
		"drizzle-kit": "^0.31.6",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@tailwindcss/vite": "^4.1.17",
		"@vercel/blob": "^2.0.0",
		"better-sqlite3": "^12.4.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"lucide-svelte": "^0.553.0",
		"oslo": "^1.2.1",
		"tailwindcss": "^4.1.17"
	}
}
